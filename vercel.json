{
  "version": 2,
  "builds": [
    {
      "src": "src/app/**/route.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/app/**/*.{js,ts,jsx,tsx}",
      "use": "@vercel/next"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/bump-groups",
      "schedule": "0 * * * *"  // Run every hour for group bumps
    },
    {
      "path": "/api/protect-group",
      "schedule": "*/5 * * * *"  // Run every 5 minutes for anti-spam/protection
    },
    {
      "path": "/api/update-all",
      "schedule": "0 0 * * *"  // Run daily at midnight for auto-updates
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret"
  },
  "outputDirectory": ".next"
}